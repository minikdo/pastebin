#!/bin/bash

set -e

display_usage() {
    echo "Usage: $(basename "$0") <file> [expire_days]"
    } 

if [[ $# < 1 ]]; then
    display_usage
    exit 1
fi

if [[ ( $1 == "--help") || $1 == "-h" ]]; then
    display_usage
    exit 0
fi 
 
if [ -z ${MY_PASTEBIN_KEY} ]; then
   echo "MY_PASTEBIN_KEY is unset"
   exit
fi

FILE=$1
EXPIRE=$2
URL=http://localhost:5000/

if [ -p /dev/stdin ]; then
    TMPFILE=/tmp/$(mktemp publish.XXXXXXX)
    
    while IFS= read line; do
        echo ${line} >> $TMPFILE
    done

    FILE=${TMPFILE}
fi

curl -X POST -F file=@${FILE} \
     -F expire=${EXPIRE} \
     ${URL}${MY_PASTEBIN_KEY}/

if [ -e $TMPFILE ]; then
   rm $TMPFILE
fi
   
echo
